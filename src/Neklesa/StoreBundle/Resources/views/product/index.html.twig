{% extends 'base.html.twig' %}

{% block body %}

    <h1>Список продуктов <a href="{{ path('crud-product_new') }}" class="glyphicon glyphicon-plus"></a></h1>
    <div class="row">
        <div class="col-lg-1"><h4>ID</h4></div>
        <div class="col-lg-5"><h4>Название</h4></div>
        <div class="col-lg-3"><h4>Цена</h4></div>
        <div class="col-lg-3"><h4>Действие</h4></div>
    </div>
    {% for product in products %}
        <div class="row">
            <div class="col-lg-1">{{ product.id }}</div>
            <div class="col-lg-5"><a href="{{ path('crud-product_show', { 'id': product.id }) }}">{{ product.name }}</a></div>
            <div class="col-lg-3">{{ product.price }}</div>
            <div class="col-lg-3">
                <a href="{{ path('crud-product_show', { 'id': product.id }) }}" class="glyphicon glyphicon-eye-open"></a>
                <a href="{{ path('crud-product_edit', { 'id': product.id }) }}" class="glyphicon glyphicon-pencil"></a>
            </div>
        </div>
    {% endfor %}

{% endblock %}
